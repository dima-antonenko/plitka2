<style type="text/css">
	.category_grid .product_item{
		float: left;
	}
</style>	
<%= render '/product_categories/blocks/breadcums' %>
<div class="page_content_offset">			
				<div class="container">
					<div class="row clearfix">
						<!--left content column-->
						<section class="col-lg-9 col-md-9 col-sm-9">
							<h2 class="tt_uppercase color_dark m_bottom_25"><%= @collection.name %></h2>
							<div class="collection_top_row">
								<div class="collection_image">
									<a href="#" class="d_block relative wrapper pp_wrap m_bottom_15">
											<img src="/images/product_img_1.jpg" class="tr_all_hover" alt="">
										</a>
								</div>
								<div class="collection_params"></div>
							</div>
							<hr class="m_bottom_10 divider_type_3">
							<!--products-->
							<section class="products_container category_grid clearfix m_bottom_15">
							<% if @collection.products.count > 0 %>
								<%= render '/collections/blocks/products_list' %>
							<% end %>

							
							</section>
							<hr class="m_bottom_10 divider_type_3">
						</section>
						<!--right column-->

						<%= render '/product_categories/blocks/sidebar/sidebar' %>
						
					</div>
				</div>
				</div>