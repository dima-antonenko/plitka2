<style type="text/css">
  #content h1{
    margin-top: 0;
  }
  .breadcrumb{
    margin-bottom: 0;
  }
</style>
<% provide(:title, @product.meta_title) %>
<% provide(:description, @product.meta_description) %>
<% provide(:keywords, @product.meta_keywords) %>
<%= render '/product_categories/blocks/sidebar/sidebar' %>
  <div id="content">
    <div class="breadcrumb"></div>
    <h1><span class="h1-top"><%= @product.name %></span></h1>
    <div class="product-info">
      <div class="left">
        <div class="image">
          <a href="<%= @product.avatar.url(:medium) %>" title="" class="cloud-zoom" id='zoom1' rel="adjustX: 0, adjustY:0">
          <%= image_tag @product.avatar.url(:medium), id: "image" %>
          </a>
      <div class="zoom"><a id="zoomer" class="colorbox" href="<%= @product.avatar.url(:medium) %>">Увеличить</a></div>
        </div>
        <div class="image-additional">
         <div id="carousel-p">
        <ul class="jcarousel-skin-tfc">
        <li>
        <a href="image/ex/p1-big.jpg" title="" class="cloud-zoom-gallery" rel="useZoom: 'zoom1', smallImage: 'image/ex/p1-big.jpg' "><img src="image/ex/p1-small.jpg" title="" alt="" /></a>
        </li>
         <li>
        <a href="image/ex/p2-big.jpg" title="" class="cloud-zoom-gallery" rel="useZoom: 'zoom1', smallImage: 'image/ex/p2-big.jpg' "><img src="image/ex/p2-small.jpg" title="" alt="" /></a>
        </li>
         <li>
        <a href="image/ex/p3-big.jpg" title="" class="cloud-zoom-gallery" rel="useZoom: 'zoom1', smallImage: 'image/ex/p3-big.jpg' "><img src="image/ex/p3-small.jpg" title="" alt="" /></a>
        </li>
         <li>
        <a href="image/ex/p4-big.jpg" title="" class="cloud-zoom-gallery" rel="useZoom: 'zoom1', smallImage: 'image/ex/p4-big.jpg' "><img src="image/ex/p4-small.jpg" title="" alt="" /></a>
        </li>
        </ul>
        </div>
        </div>
      
      </div>
      <div class="right">
        <div class="description">
          <div class="price"> <span id="line_s"></span>
            <p class="wrap_price"> <span class="price-new"><%= number_to_currency(@product.price, unit: "р.",delimiter: " ' ",  format: "%n %u", precision: 0) %></span></p>
          </div>
        </div>
        <div class="desc2"> 
          <span>Артикул:</span><%= @product.sku %><br>
          </div>
        <div class="cart">
          <div>
            <%= button_to 'Купить', line_items_path(product_id: @product), { id: "button-cart", class: "button"} %>
             </div>
        </div>
        
        </div>
      </div>
    <div id="tabs" class="htabs"><a href="#tab-description">Описание</a> </div>
    <div id="tab-description" class="tab-content">
      <div class="cpt_product_description ">
        <div>
          <%= @product.description.html_safe %>
        </div>
      </div>
    </div>

</div>
<br/>
</hr>